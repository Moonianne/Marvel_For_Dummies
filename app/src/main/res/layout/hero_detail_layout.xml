<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/hero_detail_imageView"
        android:layout_width="0dp"
        android:layout_height="354dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:src="@drawable/ic_logo"
        />

    <TextView
        android:id="@+id/bio_textView"
        android:layout_width="295dp"
        android:layout_height="114dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:fontFamily="@font/bangers"
        android:text="basivcbdsknkajsbdljfkdjbdjimkgbsdfJKGBDSK;SFKDSBFKpaulFBSGSFND"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hero_detail_imageView"
        tools:hint="BIO" />

    <TextView
        android:id="@+id/powers_textView"
        android:layout_width="298dp"
        android:layout_height="154dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="anoaidn;gdsgkfdsNBGLJDbgbdsgbsbgjhisdbkgjdsbgjdsbgfadjlgkdf"
        android:textSize="30sp"
        android:fontFamily="@font/bangers"
        app:layout_constraintEnd_toEndOf="@+id/bio_textView"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/bio_textView"
        app:layout_constraintTop_toBottomOf="@+id/bio_textView"
        tools:hint="POWERS" />

    <Button
        android:id="@+id/mcu_link_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Link"
        android:fontFamily="@font/bangers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/copyright_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/bangers"
        android:text="@string/marvel_copyright"
        android:textSize="12sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hero_recyclerview" />


</android.support.constraint.ConstraintLayout>